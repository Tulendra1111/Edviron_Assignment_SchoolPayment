{
  "info": {
    "name": "School Payment API",
    "description": "API collection for School Payment and Dashboard Application",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://edvironassignment.onrender.com",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/transactions?page=1&limit=10&status=SUCCESS",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "SUCCESS"
                },
                {
                  "key": "school_id",
                  "value": "65b0e6293e9f76a9694d84b4",
                  "disabled": true
                },
                {
                  "key": "gateway",
                  "value": "CASHFREE",
                  "disabled": true
                },
                {
                  "key": "startDate",
                  "value": "2024-01-01",
                  "disabled": true
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get School Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/transactions/65b0e6293e9f76a9694d84b4",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions", "65b0e6293e9f76a9694d84b4"]
            }
          }
        },
        {
          "name": "Check Transaction Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/transactions/status/ORD_123456789",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions", "status", "ORD_123456789"]
            }
          }
        },
        {
          "name": "Get Transactions by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/transactions/status-filter/SUCCESS",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions", "status-filter", "SUCCESS"]
            }
          }
        },
        {
          "name": "Get Transactions by Gateway",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/transactions/gateway/CASHFREE",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions", "gateway", "CASHFREE"]
            }
          }
        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"school_id\": \"65b0e6293e9f76a9694d84b4\",\n  \"trustee_id\": \"TRUSTEE_123\",\n  \"student_info\": {\n    \"name\": \"John Doe\",\n    \"id\": \"STU_001\",\n    \"email\": \"john.doe@example.com\"\n  },\n  \"amount\": 1000,\n  \"callback_url\": \"https://example.com/callback\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/create-payment",
              "host": ["{{base_url}}"],
              "path": ["api", "create-payment"]
            }
          }
        },
        {
          "name": "Check Payment Gateway Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/transactions/payment-gateway-status/COLLECT_ID/SCHOOL_ID",
              "host": ["{{base_url}}"],
              "path": ["api", "transactions", "payment-gateway-status", "COLLECT_ID", "SCHOOL_ID"]
            }
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Payment Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": 200,\n  \"order_info\": {\n    \"order_id\": \"ORD_123456789\",\n    \"payment_method\": \"UPI\",\n    \"gateway\": \"CASHFREE\",\n    \"transaction_amount\": 1000,\n    \"bank_reference\": \"TXN123456\",\n    \"payment_message\": \"Payment successful\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook"]
            }
          }
        },
        {
          "name": "Update Transaction Status",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"transactionId\": \"ORD_123456789\",\n  \"status\": \"SUCCESS\",\n  \"payment_method\": \"UPI\",\n  \"bank_refrence\": \"TXN123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/update-status",
              "host": ["{{base_url}}"],
              "path": ["api", "update-status"]
            }
          }
        }
      ]
    }
  ]
}
